<%= form_with(model: group, class: "needs-validation", novalidate: true) do |form| %>
  <% if group.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
    <div class="invalid-feedback">Please provide a name for the group.</div>
  </div>

  <div class="form-group">
    <%= form.label :icon, class: "form-label" %>
    <%= form.text_field :icon, placeholder: 'Add Emoji icon', class: "form-control" %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
