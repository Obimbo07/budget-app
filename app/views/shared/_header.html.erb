<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <!-- Font Awesome CSS for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <title>BudgetApp</title>
  <style>
    /* Custom CSS for sidebar */
    .sidebar {
      position: absolute;
      top: 0;
      left: -250px; /* Initially hide the sidebar */
      width: 250px;
      height: 100vh;
      background-color: #343a40; /* Bootstrap dark background color */
      transition: left 0.3s ease; /* Smooth transition for opening and closing */
      padding-top: 60px; /* Adjusted for space for profile image and close button */
    }
    .sidebar.open {
      left: 0; /* Open the sidebar */
    }
    .profile-img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background-color: #fff; /* Default background color */
      margin-left: 20px; /* Adjusted for space from the left */
    }
    .close-btn {
      color: #fff; /* Button text color */
      position: absolute;
      top: 20px; /* Adjusted for space from the top */
      right: 20px; /* Adjusted for space from the right */
      cursor: pointer; /* Change cursor to pointer on hover */
    }
    .navbar-custom {
      background-color: #3778c2;
    }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" id="sidebarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <h1 class="navbar-brand">
      <%= link_to 'BudgetApp', root_path, class: "text-white" %>
    </h1>

    <div class="sidebar navbar-custom" id="sidebar">
      <span class="close-btn" id="sidebarClose">&times;</span>
      <ul class="navbar-nav d-flex flex-column align-items-center gap-20">
        <!-- Profile Image -->
        <img src="<%= asset_path('profile-icon.png') %>" alt="Profile Image" class="profile-img">
        <!-- Current User's Name -->
        <p class="text-white mb-0"><%= current_user.name %></p>
        <!-- Navigation Links with Borders -->
        <li class="nav-item d-flex active border-bottom border-white">
          <a class="nav-link" href="#">
            <i class="fas fa-user"></i>
            <%= link_to "My Account", edit_user_registration_path, class: "nav-link" %>
          </a>
        </li>
        <li class="nav-item d-flex border-bottom border-white">
          <a class="nav-link" href="#">
            <i class="fas fa-th-list"></i> <!-- Categories icon -->
            <%= link_to "Categories", groups_path, class: "nav-link" %>
          </a>
        </li>
        <li class="nav-item">
          <%= link_to "Logout", destroy_user_session_path, class: "nav-link" %>
        </li>
      </ul>
    </div>
    <i class="fas fa-search text-white"></i>
  </div>
</nav>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

<script>
  $(document).ready(function(){
    $('#sidebarCollapse').on('click', function(){
      $('#sidebar').toggleClass('open');
    });
    // Close sidebar when close button is clicked
    $('#sidebarClose').on('click', function(){
      $('#sidebar').removeClass('open');
    });
  });
</script>

</body>
</html>
