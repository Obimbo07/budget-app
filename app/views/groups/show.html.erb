<%= render @group %>

<div class="p-2" id="groups">
  <% @group.items.each do |item| %>
    <div class="card mb-2">
      <div class="card-body d-flex align-items-center justify-content-between">
        <h2 class="mr-3"><%= @group.icon %></h2>
        <div>
          <h4 class="card-title text-secondary"><%= item.name %></h4>
          <p class="card-text text-secondary"><%= @current_date %></p>
        </div>
        <h4 class="card-text">$<%= item.amount %></h4>
      </div>
    </div>
  <% end %>
</div>

<div class="fixed-bottom d-flex justify-content-center bg-success">
  <div class="w-75">
    <%= link_to "New Transaction", new_group_item_path(@group), class: "text-white btn btn-block border border-white m-2", style: "border-radius: 0;" %>
  </div>
</div>
