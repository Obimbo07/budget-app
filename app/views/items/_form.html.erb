<%= form_with(model: item, url: group_items_path, method: "POST") do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount %>
  </div>

  <div>
    <%= form.label :group_id, style: "display: block" %>
    <%= form.collection_select :group_id, Group.all, :id, :name, { prompt: "Select a group" } %>
  </div>

  <%= form.hidden_field :authors_id, value: current_user.id %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
