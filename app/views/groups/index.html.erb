<div class="container-fluid">
  <div class="p-2" id="groups">
    <% @groups.each do |group| %>
      <%= link_to group_path(group), class: "card-link" do %>
        <div class="card position-static d-flex flex-row justify-content-space-around mb-2 p-3 border rounded">
          <span class="p-2"><%= group.icon %></span>
          <span class="p-2"><%= group.name %></span>
          <span class="p-2">Totals: $<%= group.total_amount %></span>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="fixed-bottom d-flex justify-content-center bg-success">
    <div class="w-75">
      <%= link_to "New Category", new_group_path, class: "text-white btn btn-block border border-radius-0 m-2 border-white", style: "border-radius: 0;" %>
    </div>
  </div>
</div>
